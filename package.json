{
  "name": "typed-ls",
  "license": "MIT",
  "version": "0.1.0",
  "description": "Type-safe local storage",
  "keywords": [
    "local storage",
    "typed",
    "typescript",
    "type-safe"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "go": "npm run build && preview && ava",
    "release": "npm run build && np --no-tests",
    "test": "ava",
    "qa": "tsc && xo --fix"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "ava": {
    "require": [
      "esbuild-runner/register"
    ],
    "extensions": [
      "ts"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true
  },
  "devDependencies": {
    "ava": "4.3.1",
    "esbuild-runner": "2.2.1",
    "eslint": "8.20.0",
    "np": "7.6.2",
    "one-eslint": "0.0.4",
    "package-preview": "4.0.0",
    "prettier": "2.5.1",
    "tsconfig-one": "0.0.2",
    "typescript": "4.7.4"
  }
}
